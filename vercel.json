{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "redirects": [
    {
      "source": "/r",
      "destination": "/?utm_source=reddit&utm_medium=profile&utm_campaign=bio",
      "permanent": false
    },
    {
      "source": "/:path*",
      "has": [{"type": "host", "value": "dezygn.com"}],
      "destination": "https://www.dezygn.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}